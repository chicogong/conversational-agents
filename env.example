# Conversational Agent - Environment Variables
# Copy this file to .env and set appropriate values

# ===== Server Configuration =====
SERVER_PORT=8080
SERVER_HOST=localhost
NODE_ENV=development  # development or production

# CORS settings (optional)
ENABLE_CORS=false
CORS_ORIGIN=*

# ===== Azure Speech Service =====
# Required for speech recognition and synthesis
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus  # Your Azure Speech Service region

# Speech service settings (optional)
SPEECH_LANGUAGE=zh-CN
SPEECH_VOICE=zh-CN-XiaochenMultilingualNeural
SPEECH_OUTPUT_FORMAT=audio-16khz-128kbitrate-mono-mp3
VOICE_DETECTION_THRESHOLD=300

# Speech timeouts in milliseconds (optional)
INITIAL_SILENCE_TIMEOUT=5000
END_SILENCE_TIMEOUT=1000
TTS_TIMEOUT=8000

# ===== OpenAI API Configuration =====
# Required for language model
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI settings (optional)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=300

# Assistant configuration (optional)
SYSTEM_PROMPT="You are an intelligent voice assistant named Xiao Rui. Please respond in a conversational, concise way. Avoid using emoji or special characters."

# ===== Conversation Settings =====
MAX_CONVERSATION_HISTORY=10
CLEAR_ON_DISCONNECT=true

# ===== WebSocket Configuration =====
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# ===== Logging =====
LOG_LEVEL=debug  # debug, info, warn, error, fatal
LOG_CONSOLE=true
LOG_FILE=true
MAX_LOG_FILES=7 